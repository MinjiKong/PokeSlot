<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".PokeSlotsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_pokeslots_monsterball"
            android:layout_width="wrap_content"
            android:layout_height="249dp"
            android:src="@drawable/monsterball" />

        <TextView
            android:id="@+id/textView_pokeCol_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="34sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="39dp" />

        <Button
            android:id="@+id/button_pokeslots_draw"
            android:layout_width="104dp"
            android:layout_height="52dp"
            android:backgroundTint="@color/orange"
            android:text="@string/pokeslots_button" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/textView_pokeslots_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set the name of your Pokemon"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="visible" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <EditText
            android:id="@+id/editText_pokeslots_name"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Enter name here"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_pokeslots_save"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange"
            android:text="Save"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>